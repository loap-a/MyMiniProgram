/* pages/raise_task/raise_task.wxss */
@import "../../colorui/main.wxss";
@import "../../colorui/icon.wxss";

page{
  height:100%;
  background-color: #f1f1f1;
}

.margin-left{
  margin-left:20rpx;
}

.margin-right{
  margin-right:20rpx;
}

.input{
  margin-left:50rpx;
}

.title-detail{
  width:140rpx;
}

.cu-form-group {
	background-color: #ffffff;
	padding: 1rpx 30rpx;
	display: flex;
	align-items: center;
	min-height: 100rpx;
  /* justify-content: space-between; */
  margin-top:20rpx;
}
.cu-form-group-1 {
	background-color: #ffffff;
	padding: 1rpx 30rpx;
	display: flex;
	align-items: center;
	min-height: 100rpx;
  justify-content: space-between;
}

.submit-button{
  margin-top:20rpx;
  margin-bottom:20rpx;
}

.main-body-detail{
  min-height:200rpx;
  background-color: #FFFFFF;
  padding:1rpx 30rpx;
  display:flex;
  margin-top:20rpx;
}
.input-detail{
  margin-left:50rpx;
  margin-top:10rpx;
  height:180rpx;
  width:80%;
  border-style: solid;
  border-width: 1rpx;
  border-color:rgb(163, 162, 162);
  border-radius: 10rpx;
}

.main-body-location-detail{
  min-height:160rpx;
  background-color: #FFFFFF;
  padding:1rpx 30rpx;
  display:flex;
  margin-top:20rpx;
}
.input-location-detail{
  margin-left:50rpx;
  margin-top:10rpx;
  height:140rpx;
  width:80%;
  border-style: solid;
  border-width: 1rpx;
  border-color:rgb(163, 162, 162);
  border-radius: 10rpx;
}


.index-model{
  margin:0 auto;
  height:600rpx;
  width:600rpx;
}

.login-header {
  border-bottom: 1px solid #ccc;
  text-align: center;
  width:100%;
  height: 150rpx;
  /* line-height: 450rpx; */
}

.login-header-text{
  font-size:80rpx;
  margin:auto;
}
.login-header image {
  width: 150rpx;
  height: 150rpx;
}

.login-content {
  margin-top:50rpx;
}

.login-content text {
  display: block;
  color: #9d9d9d;
  margin-top: 40rpx;
}

.login-bottom {
  border-radius: 80rpx;
  font-size: 35rpx;
}

.notLogin-text{
  text-align: center;
  font-size:40rpx;
  margin:100rpx auto;
}

