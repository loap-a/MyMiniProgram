/* pages/creator/creator.wxss */
page{
    background-image: linear-gradient(25deg, #376e85, #73909b, #a9b4b1, #dfd9c8);
}

.creator-head{
    width: 90%;
    height:300rpx;
    background-color: rgba(255, 255, 255, 0.4);
    display: flex;
    border-radius: 30rpx;
    margin-left:35rpx;
    margin-top: 20rpx;
    position: fixed; 
}

.creator-head-avatar{
    width:200rpx;
    height:200rpx;
    border-radius: 20rpx;
    margin-left:30rpx;
    margin-top:45rpx;
}

.creator-head-name{
    width: 300rpx;
    height:100%;
    display: flex;
    flex-direction: column;
    margin-left: 50rpx;
    margin-top:50rpx;
}

.creator-body{
    width: 90%;
    height:660rpx;
    background-color: rgba(255, 255, 255, 0.3);
    display: flex;
    border-radius: 30rpx;
    margin-left:35rpx;
    margin-top: 370rpx;
    position: fixed; 
    flex-direction: column;
}

.creator-body-detail{
    margin-top:20rpx;
    text-indent: 50rpx;
    width: 95%;
    margin-left:20rpx;
}

.creator-body-wish{
    margin-left:140rpx;
    margin-top:50rpx;
    width: 400rpx;
    height:333rpx;
}