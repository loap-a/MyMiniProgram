/* pages/user_task/user_task.wxss */
@import "../../colorui/main.wxss";
@import "../../colorui/icon.wxss";

page{
  height:100%;
  background-color: #efeff4;
}

.top-bar{
  height:60rpx;
  font-size:40rpx;
  text-align: center;
}



.scroll-bar{
  width:100%;
  height:100%;
  margin-top:-40rpx;
  }
  
  .scroll-item{
    width:90%;
    height:220rpx;
    margin:30rpx auto;
    background-color: #ffffff;
    box-shadow:10rpx 5rpx 5rpx #c5c9ca;
    border-radius: 20rpx;
    display:flex;
  }
  
  .scroll-item-image{
    margin-top:30rpx;
    margin-left:20rpx;
    width:220rpx;
    height:150rpx;
    border-radius: 20rpx;
  }
  
  .scroll-item-textfield{
    margin-left:50rpx;
    margin-top:20rpx;
    width:350rpx;
  }
  
  .scroll-item-title{
    font-size: 25rpx;
    overflow: hidden;
  }
  
  .scroll-item-content{
    height:103rpx;
    font-size:25rpx;
    overflow: hidden;
  }
  
  .scroll-item-gap{
    width:300rpx;
    height:5rpx;
    border-radius: 100rpx;
    margin-top:10rpx;
    margin-bottom: 10rpx;
    background-color: #c5c9ca;
  }
  
  .scroll-item-sub-diy{
    font-size:20rpx;
    margin-left:210rpx;
  }
  